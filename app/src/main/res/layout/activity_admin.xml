<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F4"
    android:fitsSystemWindows="true">

    <!-- Gambar Admin -->
    <ImageView
        android:id="@+id/header_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="56dp"
        android:src="@drawable/models2" />

    <!-- Info Admin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvWelcomeAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME, Admin"
            android:textSize="14sp"
            android:textColor="#888888"
            android:fontFamily="@font/helvetica"/>

        <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROLE: Super Admin"
            android:textSize="14sp"
            android:textColor="#888888"
            android:fontFamily="@font/helvetica"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginHorizontal="16dp" />

    <!-- Menu Admin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:text="ADMIN PANEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="14sp"
            android:fontFamily="@font/helvetica"/>

        <TextView
            android:id="@+id/btnManageUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MANAGE USERS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/monumentextended"/>

        <TextView
            android:id="@+id/btnManageProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MANAGE PRODUCTS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/monumentextended"/>

        <TextView
            android:id="@+id/btnViewTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW TRANSACTIONS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/monumentextended"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_navigation"
        android:layout_width="378dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:background="@android:color/transparent">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/house_02deactive"
                    app:tint="@color/black" />
            </LinearLayout>

            <!-- Search -->
            <LinearLayout
                android:id="@+id/nav_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/search"
                    app:tint="@color/black" />
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/user_02active"
                    app:tint="@color/black" />
            </LinearLayout>



</LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
