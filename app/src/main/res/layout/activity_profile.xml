<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main"
    android:fitsSystemWindows="true">

    <!-- Header Gambar -->

    <!-- Konten -->

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/models2" />

    <LinearLayout
        android:id="@+id/profile_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Welcome & Member ID -->
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME, Prima Pratama"
            android:textSize="11sp"
            android:textColor="#99000000"
            android:fontFamily="@font/helvetica" />

        <TextView
            android:id="@+id/tv_member_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEMBER ID: 7529921687674937"
            android:textSize="11sp"
            android:textColor="#99000000"
            android:fontFamily="@font/helvetica"
            android:layout_marginBottom="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCC"
            android:layout_marginVertical="12dp" />

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCOUNT"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#999999"
            android:fontFamily="@font/monumentextended_regular"
            android:layout_marginBottom="12dp" />

        <!-- Menu List -->
        <TextView
            android:id="@+id/menu_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/monumentextended_regular"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/menu_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDERS"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/monumentextended_regular" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_navigation"
        android:layout_width="378dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:background="@android:color/transparent">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/house_02deactive"
                    app:tint="@color/black" />
            </LinearLayout>

            <!-- Search -->
            <LinearLayout
                android:id="@+id/nav_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/search"
                    app:tint="@color/black" />
            </LinearLayout>

            <!-- Favorite -->
            <LinearLayout
                android:id="@+id/nav_favorite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/heart2"
                    app:tint="@color/black" />
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/user_02active"
                    app:tint="@color/black" />
            </LinearLayout>

            <!-- Cart -->
            <LinearLayout
                android:id="@+id/nav_cart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/handbag"
                    app:tint="@color/black" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
